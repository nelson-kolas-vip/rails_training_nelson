<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card mt-5 shadow-sm">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Create Restaurant</h2>

          <%= form_with(model: @restaurant, local: true) do |form| %>
            <% if @restaurant.errors.any? %>
              <div class="alert alert-danger">
                <h5 class="alert-heading">Please fix the following errors:</h5>
                <ul class="mb-0">
                  <% @restaurant.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "Enter restaurant name" %>
            </div>

            <div class="mb-3">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description, class: "form-control", placeholder: "Enter description", rows: 3 %>
            </div>

            <div class="mb-3">
              <%= form.label :location, class: "form-label" %>
              <%= form.text_field :location, class: "form-control", placeholder: "Enter location" %>
            </div>

            <div class="mb-4">
              <%= form.label :cuisine_type, class: "form-label" %>
              <%= form.text_field :cuisine_type, class: "form-control", placeholder: "e.g., Italian, Indian, etc." %>
            </div>

            <div class="d-grid">
              <%= form.submit "Create Restaurant", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
